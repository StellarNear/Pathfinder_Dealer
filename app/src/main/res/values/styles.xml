<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Base application theme. -->
    <attr name="colorBackground" format="reference" />
    <attr name="gray" format="reference" />
    <attr name="darker_gray" format="reference" />
    <attr name="white" format="reference" />
    <attr name="black" format="reference" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="darker_gray">@color/darker_gray</item>
        <item name="gray">@color/gray</item>
        <item name="white">@color/white</item>
        <item name="black">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemehalda" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryhalda</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkhalda</item>
        <item name="colorBackground">@color/colorBackgroundhalda</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemesylphe" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarysylphe</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarksylphe</item>
        <item name="colorBackground">@color/colorBackgroundsylphe</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemerana" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryrana</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkrana</item>
        <item name="colorBackground">@color/colorBackgroundrana</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarHelp">
        <item name="colorPrimary">@color/end_gradient_title_bar_help</item>
        <item name="colorPrimaryDark">@color/start_gradient_title_bar_help</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomButtonStyle" parent="Widget.AppCompat.Button.Borderless" />

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


</resources>
