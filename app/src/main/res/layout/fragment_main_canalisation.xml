<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stellarnear.wedge_companion.Activities.MainActivityFragmentCanalisation">

    <LinearLayout
        android:id="@+id/linearKiFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_icon_main_actions075"
            android:background="@drawable/bar_gradient_main_subfragments"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainPanelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Canalisation d'énergie"
                android:textColor="@color/colorBackground"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainPanelKicount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(xx utilisations restants)"
                android:textColor="@color/colorBackground"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/canalTitleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/canalNameTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Capacité"
                android:textColor="@color/title_skill_color_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/canalEffectTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:text="Effet"
                android:textColor="@color/title_skill_color_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/canalCostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Coût"
                android:textColor="@color/title_skill_color_text"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/canalFragmentContentLinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_frag_canal_to_main"
        android:layout_width="@dimen/size_icon_main_actions075"
        android:layout_height="@dimen/size_icon_main_actions075"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="@dimen/general_margin"
        android:scaleType="fitXY"
        android:src="@drawable/canalisation_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
