<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pathfinder.pathfinder_dealer.MainActivity"
    android:fitsSystemWindows="true"
    android:transitionName="transition">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />


    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_damage_detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:backgroundTint="@android:color/darker_gray"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp" />

    <TextView
        android:id="@+id/jet_att_textbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="6 attaques\n+33 / +33 / +33 / +28 / +23 / +20"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_anchor="@+id/toolbar"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />

    <include
        android:id="@+id/include"
        layout="@layout/grid_dice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_anchor="@+id/jet_att_textbox"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/multishot"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="x2        x2         x2         x2         x2         x2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/jet_att_textbox"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/jet_att_ajout_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+33 / +33 / +33 / +28 / +23 / +20"
        android:textAlignment="center"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginTop="210dp"/>

    <TextView
        android:id="@+id/hit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coups qui touchent :"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/jet_att_ajout_textbox"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />

    <include
        android:id="@+id/include_box"
        layout="@layout/grid_check"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_anchor="@+id/hit_text"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"/>

    <TextView
        android:id="@+id/crit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coup(s) critique(s) :"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/include_box"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />

    <include
        android:id="@+id/include_box_crit"
        layout="@layout/grid_check_crit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_anchor="@+id/crit_text"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"/>


    <View
        android:id="@+id/bar_sep"
        android:layout_height="3dp"
        android:layout_width="fill_parent"
        android:background="#90909090"
        app:layout_anchor="@+id/include_box_crit"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dmg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dégâts :"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/bar_sep"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />


    <include
        android:id="@+id/include_element"
        layout="@layout/grid_element"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_anchor="@+id/dmg_text"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="350dp"
        />

    <TextView
        android:id="@+id/all_dmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-   -   -   -"
        android:textAlignment="center"
        android:textSize="35sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/dmg_text"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginTop="400dp"/>
        />

    <TextView
        android:id="@+id/all_dmg_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[0-0]   [0-0]   [0-0]   [0-0]"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/all_dmg"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />

    <TextView
        android:id="@+id/all_dmg_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%      0%      0%      0%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/all_dmg_range"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />


    <TextView
        android:id="@+id/proba_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probabilité de dépacement (>=) :"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/all_dmg_percent"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />

    <TextView
        android:id="@+id/all_dmg_proba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%      0%      0%      0%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_anchor="@+id/proba_text"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        />




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_damage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@drawable/ic_flare_black_24dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_filter_center_focus_black_24dp"

        />

</android.support.design.widget.CoordinatorLayout>