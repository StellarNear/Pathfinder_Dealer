<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_dialog_RelativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_dialog"
    android:clipChildren="false"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_customDialog_text"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/customDialogTestIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mire_test" />

        <TextView
            android:id="@+id/customDialogTestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_customDialog_text"
            android:gravity="center_horizontal"
            android:text="Test de compétence :"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/customDialogTestSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_customDialog_text"
            android:gravity="center_horizontal"
            android:text="Blabla : maitrise : Abilité +6 : Bonus +8 > 65"
            android:textColor="@color/secondaryTextCustomDialog"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/customDialogLinearButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_customDialog_test_diceroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_basic_gradient"
            android:text="normal"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button_customDialog_test_passive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:background="@drawable/button_basic_gradient"
            android:text="passif (10)"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button_customDialog_test_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_basic_gradient"
            android:text="focus (20)"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/customDialogTestResultDice"
            android:layout_width="@dimen/icon_dices_testalertdialog"
            android:layout_height="@dimen/icon_dices_testalertdialog"
            android:layout_marginBottom="@dimen/margin_customDialog_text" />

        <TextView
            android:id="@+id/customDialogTitleResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/general_margin"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/customDialogTestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/general_margin"
            android:gravity="center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sizeTextCustomDialogResult" />

        <TextView
            android:id="@+id/customDialogTestCallToAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/general_margin"
            android:gravity="center_horizontal"
            android:text="Choisis ton action"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>