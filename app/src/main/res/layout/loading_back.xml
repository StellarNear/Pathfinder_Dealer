<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center"
    android:paddingStart="@dimen/mini_quadrant_icons_margin"
    android:background="@drawable/unloaded_back"
    android:paddingEnd="@dimen/mini_quadrant_icons_margin"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_back_img"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:background="@drawable/unloaded_back_img"
        android:layout_margin="@dimen/general_margin"
        android:src="@drawable/wedge_unloaded"/>
</LinearLayout>




