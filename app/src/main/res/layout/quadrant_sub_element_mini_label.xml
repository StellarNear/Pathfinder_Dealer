<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/additional_info_label_icon"
        android:layout_width="@dimen/iconSizeQuadrantMini"
        android:layout_height="@dimen/iconSizeQuadrantMini"
        android:layout_marginEnd="3dp"
        android:src="@drawable/mire_test" />

    <TextView
        android:id="@+id/additional_info_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Abitest : "
        android:textSize="@dimen/textSizeQuadrantMini" />

</LinearLayout>



