<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="@bool/switch_fullscreen_mode_DEF"
        android:key="switch_fullscreen_mode"
        android:title="Mode plein écran"
        android:summary="Masque la barre de statut du téléphone"/>

    <SwitchPreference
        android:defaultValue="@bool/switch_manual_diceroll_def"
        android:key="switch_manual_diceroll"
        android:title="Lancement manuel D20"/>

    <SwitchPreference
        android:defaultValue="@bool/switch_fake_long_load_DEF"
        android:key="switch_fake_long_load"
        android:title="Faux temps de chargement"
        android:summary="Pour admirer les deux dessins !"/>

    <SwitchPreference
        android:defaultValue="@bool/switch_autoclose_dialog_DEF"
        android:key="switch_autoclose_dialog"
        android:title="Popups éphémères"
        android:summary="Les fenetres d'infos se referment automatiquement"/>

    <stellarnear.wedge_companion.EditTextPreference
        android:defaultValue="@integer/custom_alert_long_duration_DEF"
        android:dependency="switch_autoclose_dialog"
        android:key="custom_alert_long_duration"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeurs : %s ms"
        android:title="Durée d'affichage des fenêtres"
        />
    <SwitchPreference
        android:defaultValue="@bool/switch_shadow_link_def"
        android:key="switch_shadow_link"
        android:title="ShadowLink"
        android:summary="Connexion à la page Live Feed RP (googlesheet)"/>

</PreferenceScreen>
